doctype html
html(lang="en")
  head
    title Person Form
    meta(charset="utf-8")
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css")
    script(src="https://code.jquery.com/jquery-3.6.0.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js")
    link(rel="stylesheet", href="/css/form.css")
    script(src="/js/form.js")

  body
    header
      nav.navbar.navbar-default
        .container-fluid
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='/') Person Form

          #navbar.collapse.navbar-collapse
            ul.nav.navbar-nav
              li
                a(href='/') Form
              li
                a(href='/persons') Persons
              li
                a(href='/update') Update

    .container
      form.well.form-horizontal(action="/persons", method="POST", id="contact_form", role="form")
        legend Person Form
         // First Name
        .form-group
          label.col-md-4.control-label(for="firstName") First Name
          .col-md-4
            input.form-control(type="text", id="firstName", name="firstName")

        // Last Name
        .form-group
          label.col-md-4.control-label(for="lastName") Last Name
          .col-md-4
            input.form-control(type="text", id="lastName", name="lastName")

        // Date of Birth
        .form-group
          label.col-md-4.control-label(for="dateOfBirth") Date of Birth
          .col-md-4
            input.form-control(type="date", id="dateOfBirth", name="dateOfBirth")

        // Address 1
        .form-group
          label.col-md-4.control-label(for="address1") Address 1
          .col-md-4
            input.form-control(type="text", id="address1", name="address1")

        // Address 2
        .form-group
          label.col-md-4.control-label(for="address2") Address 2
          .col-md-4
            input.form-control(type="text", id="address2", name="address2")

        // City
        .form-group
          label.col-md-4.control-label(for="city") City
          .col-md-4
            input.form-control(type="text", id="city", name="city")

        // Postal Code
        .form-group
          label.col-md-4.control-label(for="postalCode") Postal Code
          .col-md-4
            input.form-control(type="text", id="postalCode", name="postalCode")

        // Country
        .form-group
          label.col-md-4.control-label(for="country") Country
          .col-md-4
            input.form-control(type="text", id="country", name="country")

        // Phone Number
        .form-group
          label.col-md-4.control-label(for="phone") Phone Number
          .col-md-4
            input.form-control(type="tel", id="phone", name="phone")

        // Email
        .form-group
          label.col-md-4.control-label(for="email") Email
          .col-md-4
            input.form-control(type="email", id="email", name="email")

        // User Notes
        .form-group
          label.col-md-4.control-label(for="notes") User Notes
          .col-md-4
            textarea.form-control(id="notes", name="notes")

        // Submit Button
        .form-group
          .col-md-4.col-md-offset-4
            button.btn.btn-primary(type="submit") Submit